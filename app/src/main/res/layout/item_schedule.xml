<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_schedule"
    android:layout_width="50dp"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        >
        <TextView
            android:fontFamily="@font/jungdong"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:textSize="14dp"
            android:textColor="#676d6e"
            android:textStyle="bold"/>
        <TextView
            android:fontFamily="@font/jungdong"
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:textSize="14dp"
            android:textColor="#676d6e"
            android:textStyle="bold"/>
        <TextView
            android:fontFamily="@font/jungdong"
            android:id="@+id/tv_today_marker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Today!"
            android:textColor="#ff1200"
            android:layout_marginTop="2dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_today_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:fontFamily="@font/jungdong"
            android:id="@+id/tv_empty_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#bbbbbb"
            android:text="등록된 일정이 없습니다."
            android:visibility="gone"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_item_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedHeight="true"
            />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="5dp"
        android:background="#bbbbbb"/>
</LinearLayout>